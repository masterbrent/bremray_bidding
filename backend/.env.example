# Backend Environment Variables

# Server Configuration
PORT=8080

# Database Configuration
DATABASE_URL=postgres://postgres@localhost/bremray_dev?sslmode=disable

# CORS Configuration
# For development: Add your frontend URLs
# For production: Add your domain
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here

# Private bucket for backups
R2_BUCKET_NAME=bremrayskyview

# Public bucket for photos (create a new bucket with public access enabled)
R2_PUBLIC_BUCKET_NAME=bremray-photos-public
R2_PUBLIC_BUCKET_URL=https://pub-xxxxxxxxxxxxxx.r2.dev

R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Wave API Configuration
WAVE_BUSINESS_ID=your_wave_business_id
WAVE_ACCESS_TOKEN=your_wave_access_token
