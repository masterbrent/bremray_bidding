# Backend Environment Variables

# Server Configuration
PORT=8080

# Database Configuration
# For local development:
# DATABASE_URL=postgres://username@localhost/dbname?sslmode=disable
# For production:
# DATABASE_URL=postgres://username:password@host:port/dbname?sslmode=require
DATABASE_URL=postgres://username@localhost/bremray_dev?sslmode=disable

# CORS Configuration
# Comma-separated list of allowed origins
# Use * for development only
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Optional: Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Cloudflare R2 Configuration (for photo storage)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your_public_url

# Wave API Configuration
WAVE_BUSINESS_ID=your_wave_business_id
WAVE_ACCESS_TOKEN=your_wave_access_token
